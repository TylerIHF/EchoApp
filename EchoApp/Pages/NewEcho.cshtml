{
    <p>
        @User.Identity.Name
    </p>
}

<div class="text-center">
@{
    if (@Model.DTO != null) {
<text>
    Message: @Model.DTO.MessageText
    DateTime: @Model.DTO.MessageDateTime
</text>
    }
}
      <form method="post" >
        <fieldset>
          <legend>Echo</legend>
          <div>
            <label for="MessageText">message:</label>
            <input type="text" name="MessageText" value="" />
          </div>
          <div>
            <input type="submit" value="Submit" asp-page-handler="Submit"/>
          </div>
        </fieldset>
      </form>
        <a href="/echo">list</a>
</div>
